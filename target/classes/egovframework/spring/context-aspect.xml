<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

	<aop:config>
		<aop:pointcut id="serviceMethod" expression="execution(* egovframework..impl.*Impl.*(..))
												  or execution(* com.g3way.sicims..*ServiceImpl.*(..))
												  or execution(* com.g3way.sicims.services..*Impl.*(..))
												  " />
		<aop:aspect ref="exceptionTransfer">
			<aop:after-throwing throwing="exception" pointcut-ref="serviceMethod" method="transfer" />
		</aop:aspect>
	</aop:config>

	<bean id="exceptionTransfer" class="egovframework.rte.fdl.cmmn.aspect.ExceptionTransfer">
		<property name="exceptionHandlerService">
			<list>
				<ref bean="defaultExceptionHandleManager" />
				<ref bean="otherExceptionHandleManager" />
			</list>
		</property>
	</bean>
	<bean id="selectAspect" class="com.g3way.sicims.interceptor.SessionUserAspect"/>
	<aop:config>
		<aop:pointcut id="selectPointcut" expression="execution(* com.g3way.sicims..*Impl.select*(..))
												   or execution(* com.g3way.sicims..*Impl.get*(..))
												   "/>

 		<aop:aspect ref="selectAspect">
            <aop:before pointcut-ref="selectPointcut" method="beforeMethod"/>
        </aop:aspect>
	</aop:config>

